{
  "$schema": "..\\node_modules/@tauri-apps/cli\\schema.json",
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run start",
    "devPath": "http://localhost:3000",
    "distDir": "../build"
  },
  "package": {
    "productName": "Exalise production monitoring software",
    "version": "3.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": true,
      "fs": {
        "all": true,
        "scope": ["*"]
      },
      "path": {
        "all": true
      },
      "protocol": {
        "all": true,
        "asset": true,
        "assetScope": ["**"]
      }
    },

    "bundle": {
      "active": true,
      "category": "DeveloperTool",
      "copyright": "",
      "deb": {
        "depends": []
      },
      "externalBin": [],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "com.exalise.production-monitoring-software",
      "longDescription": "Software writen by exalise to monitor the overal production, cnc machines and transfer files between them",
      "resources": [],
      "shortDescription": "",
      "targets": "all",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": "",
        "wix": {
          "language": ["nl-NL"]
        },
        "webviewInstallMode": {
          "type": "offlineInstaller"
        }
      }
    },
    "security": {
      "csp": null
    },

    "updater": {
      "active": false
    },
    "windows": [
      {
        "label": "main",
        "fullscreen": true,
        "resizable": true,
        "title": "Exalise production monitoring software",
        "width": 1920
      },
      {
        "label": "splashscreen",
        "fullscreen": true,
        "decorations": false,
        "resizable": false,
        "url": "splashscreen.html"
      }
    ]
  }
}
