{
  "$schema": "..\\node_modules/@tauri-apps/cli\\schema.json",
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run start",
    "devPath": "http://localhost:3000",
    "distDir": "../build"
  },
  "package": {
    "productName": "Exalise production monitoring software",
    "version": "1.3.7"
  },
  "tauri": {
    "allowlist": {
      "fs": {
        "all": true,
        "scope": ["*", "$RESOURCE/binarieresources/*"]
      },
      "path": {
        "all": true
      },
      "protocol": {
        "all": true,
        "asset": true,
        "assetScope": ["**"]
      },
      "shell": {
        "sidecar": true,
        "scope": [
          {
            "name": "binaries/main",
            "sidecar": true
          }
        ]
      },
      "process": {
        "all": false,
        "exit": true,
        "relaunch": false,
        "relaunchDangerousAllowSymlinkMacos": false
      },
      "dialog": {
        "all": true
      }
    },

    "bundle": {
      "active": true,
      "category": "DeveloperTool",
      "copyright": "",
      "deb": {
        "depends": []
      },
      "externalBin": ["binaries/main"],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "com.exalise.production-monitoring-software",
      "longDescription": "Software writen by exalise to monitor the overal production, cnc machines and transfer files between them",
      "resources": ["binarieresources/*"],
      "shortDescription": "",
      "targets": "all",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": "",
        "wix": {
          "language": ["nl-NL"]
        },
        "webviewInstallMode": {
          "type": "offlineInstaller"
        }
      }
    },
    "security": {
      "csp": null
    },

    "updater": {
      "active": true,
      "endpoints": [
        "https://gist.githubusercontent.com/raoulspronck/bc6f8f47643ac28d86e62b29c356db42/raw/"
      ],
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDVENTkyRTY1NkM5MTgxNDMKUldSRGdaRnNaUzVaWFRUYXFtblA2OHFvMmJmOGMydnlyWWs4Rmc1UWNjZnJLeS8xdytaL0ppeEoK",
      "windows": {
        "installMode": "basicUi"
      }
    },
    "windows": [
      {
        "label": "main",
        "fullscreen": true,
        "resizable": true,
        "title": "Exalise production monitoring software",
        "width": 1020
      }
    ]
  }
}
